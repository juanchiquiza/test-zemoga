<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItem"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/dimen_dp_4"
    app:cardElevation="@dimen/dimen_dp_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="@dimen/dimen_dp_80"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/imgCircle"
            android:contentDescription="@string/app_name"
            android:layout_width="@dimen/dimen_dp_24"
            android:background="@drawable/circle_gray"
            android:layout_height="@dimen/dimen_dp_24"
            android:layout_marginStart="@dimen/dimen_dp_8"
            android:layout_marginEnd="@dimen/dimen_dp_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/lblValuePoints"
            android:contentDescription="@string/app_name"
            android:layout_width="@dimen/dimen_dp_60"
            android:layout_height="@dimen/dimen_dp_60"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_dp_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgCircle"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/lblBranch"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_sp_16"
            android:textStyle="bold"
            android:maxLines="2"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_dp_12"
            android:layout_marginEnd="@dimen/dimen_dp_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>